#include<stdio.h>
main()
{
	float  area,pi,circumference,radius,ch;
	
	pi=3.142;
	printf("enter the choice");
	scanf("%f",&ch);
	printf("enter the value radius");
	scanf("%f",&radius);
	switch(ch)
	{
	
	case 1:
          area=pi*radius*radius;
          printf("area=%f",area);
          break;
          case 2:
          circumference=2*pi*radius;
          printf("cir=%f",circumference);
          break;
}
          return 0;
}
		
